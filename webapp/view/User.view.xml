<mvc:View
  controllerName="expenseapp.controller.User"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:form="sap.ui.layout.form"
  xmlns:core="sap.ui.core"
  displayBlock="true"
  width="50%">

  <Page title="User Profile" showHeader="false">
    <content>
      <Panel headerText="User Details">
        <content>
          <form:SimpleForm
            editable="false"
            layout="ColumnLayout"
            labelSpanL="3"
            labelSpanM="3"
            emptySpanL="4"
            emptySpanM="4"
            columnsL="2"
            columnsM="1">

            <Label text="Name"/>
            <Input value="{userProfile>/name}" editable="false" width="50%"></Input>

            <Label text="Email" />
            <Input value="{userProfile>/email}" editable="false" width="50%"></Input>

            <Label text="Mobile" />
            <Input value="{userProfile>/mobile}" editable="false" width="50%"></Input>

          </form:SimpleForm>
        </content>
      </Panel>
    </content>
  </Page>
</mvc:View>
